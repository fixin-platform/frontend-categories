template(name="Category")
  .Category.panel-body
    .panel-body-wrap
      //Doesn't work after I've switched to _i18n
      //well, we don't need that anyway for now
      //form
      //  input.form-control.filter(type="text" placeholder="Search" value=filter)
      ul.list-unstyled
        each items
          li.col-md-3.col-sm-3.col-xs-3.item-wrap
            a.app(href="{{url}}")
              div.text-center
                img(src="{{_i18n.imageUrl}}" title="{{_i18n.name}}")
              h5.name.text-center {{_i18n.name}}
      if not Pack.isApplied
        .row
          .col-xs-12
            h5.text-center Didn't find your favorite app? Request it here:
            +wishpool widgetId="WhKAA3RnaNwZYDr65" style="display: block; margin: 0 auto; width: 100%; height: 40px;"
